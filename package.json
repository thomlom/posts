{
  "name": "posts-client",
  "private": true,
  "dependencies": {
    "@reach/visually-hidden": "^0.8.0",
    "axios": "^0.19.2",
    "date-fns": "^2.9.0",
    "marked": "^0.8.0",
    "normalize.css": "^8.0.1",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-router-dom": "^5.1.2",
    "react-scripts": "^3.3.1",
    "styled-components": "^5.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@jackfranklin/test-data-bot": "^1.0.0",
    "@testing-library/jest-dom": "^5.1.0",
    "@testing-library/react": "^9.4.0",
    "@types/jest": "^25.1.1",
    "@types/marked": "^0.7.2",
    "@types/node": "^13.7.0",
    "@types/react": "^16.9.19",
    "@types/react-dom": "^16.9.5",
    "@types/react-router-dom": "^5.1.3",
    "@types/styled-components": "^4.4.2",
    "env-cmd": "^10.0.1",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-jest": "^23.6.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-testing-library": "^2.2.0",
    "husky": "^4.2.1",
    "is-ci-cli": "^2.0.0",
    "lint-staged": "^10.0.7",
    "prettier": "^1.19.1",
    "source-map-explorer": "^2.2.2",
    "typescript": "^3.7.5"
  },
  "scripts": {
    "analyze": "source-map-explorer 'build/static/js/*.js'",
    "dev": "yarn start",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "build:staging": "env-cmd -f .env.staging npm run build",
    "test": "is-ci \"test:ci\" \"test:watch\"",
    "test:watch": "react-scripts test",
    "test:coverage": "react-scripts test --watchAll --coverage",
    "test:ci": "CI=true react-scripts test --coverage",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "plugin:prettier/recommended",
      "plugin:jest/recommended",
      "plugin:testing-library/react"
    ],
    "rules": {
      "jest/no-commented-out-tests": "error",
      "jest/expect-expect": "off"
    }
  },
  "prettier": {
    "trailingComma": "es5"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run test:ci",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.(js|jsx)": [
      "eslint --fix",
      "git add"
    ],
    "*.(json|css|md)": [
      "prettier --write",
      "git add"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
